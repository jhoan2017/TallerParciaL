<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParcialTaller.ResetPass">
    <StackLayout Orientation="Vertical"
                     HorizontalOptions="CenterAndExpand"
                     VerticalOptions="CenterAndExpand">
        <Label Text="CONFIRMACIÓN"
                HorizontalOptions="CenterAndExpand" 
                   VerticalOptions="CenterAndExpand" FontSize="Large" />

        <Label Text="Hemos enviado un mensaje con tu nueva contraseña al correo"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Large"  />
        <Label Text="" x:Name="lblCorreo" VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Large" FontAttributes="Bold"/>
        

        <Button     
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" 
                    FontSize="Micro" 
                    HeightRequest="40" 
                    Text="LOGIN" 
                    x:Name="btnContraseña" 
                    Clicked="ButtonLog" 
                    TextColor="Teal"/>


    </StackLayout>

</ContentPage>